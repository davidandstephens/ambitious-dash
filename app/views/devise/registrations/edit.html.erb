<section class="container-bg p-3 mt-3">
  <h1>Edit <%= resource_name.to_s.humanize %></h1>
  <p>Looks like you've got some updates to make. No worries! Introduce us to the new you.</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-3">
      <%= f.label :email, class: "form-label" %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control custom-input" %>
    </div>

    <div class="field mb-3">
      <%= f.label :display_name, class: "form-label" %><br/>
      <%= f.text_field :display_name, autofocus: true, autocomplete: "display_name", class: "form-control custom-input" %>
    </div>

    <div class="field mb-3">
      <%= f.label :first_name, class: "form-label" %><br/>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control custom-input" %>
    </div>

    <div class="field mb-3">
      <%= f.label :last_name, class: "form-label" %><br/>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control custom-input" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field mb-3">
      <%= f.label :password, class: "form-label" %> <i>(leave blank if you don't want to change it)</i><br/>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control custom-input" %>
      <% if @minimum_password_length %>
        <br/>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field mb-3">
      <%= f.label :password_confirmation, class: "form-label" %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control custom-input" %>
    </div>

    <div class="field mb-3">
      <%= f.label :current_password, class: "form-label" %>
      <i>(we need your current password to confirm your changes)</i><br/>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control custom-input" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "btn btn-main" %>
    </div>
  <% end %>

  <h2 class="mt-3">Unhappy?</h2>

  <div><%= button_to "Cancel My Account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-angry" %></div>

</section>