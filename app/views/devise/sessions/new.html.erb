<section class="container-bg p-3 mt-3">
<h1>Log In</h1>
<p>Welcome back!</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-3">
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control custom-input" %>
  </div>

  <div class="field mb-3">
    <%= f.label :password, class: "form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control custom-input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-3">
      <%= f.check_box :remember_me, class: "form-check-input custom-check" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>

  <div class="actions mb-3">
    <%= f.submit "Let Me In", class: "btn btn-main" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</section>