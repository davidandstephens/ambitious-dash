<section class="container-bg p-3 mt-3">
<h2>Forgot Your Password?</h2>
  <p>Happens to the best of us. Let's get you back up and running.</p>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-3">
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control custom-input" %>
  </div>

  <div class="actions mb-3">
    <%= f.submit "Send me reset password instructions", class: "btn btn-main" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</section>